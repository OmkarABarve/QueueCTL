{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noEmitOnError": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "tests"]
  }
  